# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_db
POSTGRES_REPLICATION_PASSWORD=replicator_password

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# SQLAlchemy Database URL - Production (via PgBouncer)
SQLALCHEMY_DATABASE_URL=postgresql://postgres:postgres@pgbouncer-primary:6432/fastapi_db
SQLALCHEMY_READ_DATABASE_URL=postgresql://postgres:postgres@haproxy:5433/fastapi_db

# Database Connection Pool Settings
DB_POOL_SIZE=100
DB_MAX_OVERFLOW=200
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Application Configuration
ENVIRONMENT=development
SERVICE_VERSION=0.1.0
SERVICE_NAMESPACE=fastapi

# Observability Configuration
ENABLE_OBSERVABILITY=true
LOG_LEVEL=INFO
JSON_LOGS=true

# ClickHouse Configuration
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=signozpass

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=fastapi-app
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_RESOURCE_ATTRIBUTES=service.namespace=fastapi,deployment.environment=development

# SigNoz Cloud Configuration (optional - comment out if using self-hosted)
# SIGNOZ_INGESTION_KEY=your-signoz-ingestion-key
# SIGNOZ_REGION=us  # or eu, in
